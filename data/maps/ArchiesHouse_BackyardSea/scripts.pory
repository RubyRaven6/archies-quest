mapscripts ArchiesHouse_BackyardSea_MapScripts {
	MAP_SCRIPT_ON_TRANSITION {
		if(!flag(FLAG_TOGGLE_WATER_INTERACT)){
			setflag(FLAG_TOGGLE_WATER_INTERACT)
		}
	}
}

script ArchiesHouse_BackyardSea_Boat {
    msgbox(("It's a boat to back home. Take it?"), MSGBOX_YESNO)
    closemessage
    if(var(VAR_RESULT) == YES){
        warp(MAP_ARCHIES_HOUSE_BACKYARD_BEACH, 22, 10)
    } else {
        msgbox(("You decide to stay for a while longer."), MSGBOX_DEFAULT)
        closemessage
    }
}

script ArchiesHouse_Backyard_EventScripts_Milotic {
    lock
	faceplayer
    getpartysize
	if(var(VAR_RESULT) < 4){
		msgbox(format("Milotic is grooming herself in the water's reflection.\pMaximize your joint slay?"), MSGBOX_YESNO)
		closemessage
		if(var(VAR_RESULT) == TRUE){
			givemon(SPECIES_MILOTIC, 50, abilityNum=0, gender=FEMALE, move1=MOVE_ICE_BEAM, move2=MOVE_DISARMING_VOICE, move3=MOVE_ATTRACT, move4=MOVE_LIFE_DEW, hpIv=31, atkIv=31, defIv=31, speedIv=31, spAtkIv=31, spDefIv=31)
			removeobject(LOCALID_BACKYARD_SEA_MILOTIC)
			msgbox("Milotic joined your party!")
			closemessage
		} else {
			applymovement(LOCALID_BACKYARD_SEA_MILOTIC, moves(face_original_direction))
			waitmovement(0)
		}
	} else {
		goto(CommonScript_Backyard_EventScripts_FullParty)
	}
	release
	end
}

