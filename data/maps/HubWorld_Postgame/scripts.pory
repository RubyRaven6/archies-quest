mapscripts HubWorld_Postgame_MapScripts {
    MAP_SCRIPT_ON_FRAME_TABLE [
        VAR_DEMON_LORD_PROGRESS, 6 {
            setrespawn(HEAL_LOCATION_HUB_WORLD_POSTGAME)
            autosave
            msgbox(format("Congratulations on finishing Archie's Quest!\p"
                            "Now that you've completed the game, you've now unlocked the postgame area.\p"
                            "Here, you can battle each demon lord with new teams each time,
                            now with all the Pok√©mon from your base!\p"
                            "Enjoy, and thank you for playing Archie's Quest!\p"
                            "- {EMOJI_HEART} Ruby and Eva"), MSGBOX_DEFAULT)
            waitmessage
            closemessage
            setvar(VAR_DEMON_LORD_PROGRESS, 7)
        }
    ]
    MAP_SCRIPT_ON_TRANSITION {
        call(ClearAllDemonLordFlags)
    }
}

script HubWorld_EventScript_Postgame_Nessereign {
    msgbox(format("Challenge Nessereign?"), MSGBOX_YESNO)
    waitmessage
    closemessage
    if(var(VAR_RESULT) == YES)
    {
        setvar(VAR_DEMON_LORD_POSTGAME, 0)
        call(SetMonLevels)
        callnative(LevelMonsToCap)
        trainerbattle_no_intro(TRAINER_DEMONLORD_NESSEREIGN, "Drat!")
        call(ClearAllDemonLordFlags)
        special(HealPlayerParty)
    }
    end

}
